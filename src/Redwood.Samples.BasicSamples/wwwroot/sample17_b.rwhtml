@viewModel Redwood.Samples.BasicSamples.ViewModels.Sample17ViewModel_B, Redwood.Samples.BasicSamples
@masterPage sample17_master.rwhtml

<rw:Content ContentPlaceHolderID="MainContent">

	<div DataContext="{value: Sample1}">
		<h1>Task List</h1>
		
		<fieldset>
			<legend>Add Task</legend>

			<p>Title: <rw:TextBox Text="{value: NewTaskTitle}" /></p>
			<p><rw:Button Text="Create" Click="{command: AddTask()}" /></p>
		</fieldset>
		<p>&nbsp;</p>

		<span class="invisibleText">
			testResource.css was not loaded correctly
		</span>
		
		<table class="table">
			<rw:Repeater DataSource="{value: Tasks}" WrapperTagName="tbody">
				<ItemTemplate>
					<tr class="{value: IsCompleted ? "completed" : ""}">
						<td>{{value: Title}}</td>
						<td>
							<rw:LinkButton 
								Text="done" 
								Click="{command: _parent.CompleteTask(TaskId)}" 
								Visible="{value: !IsCompleted}" />
						</td>
					</tr>
				</ItemTemplate>
			</rw:Repeater>
		</table>	
	</div>

	<p><rw:Button Click="{command: Redirect()}" Text="Redirect in SPA test" /></p>

	<rw:RequiredResource Name="testCss" />
	<rw:RequiredResource Name="testJs" />

</rw:Content>